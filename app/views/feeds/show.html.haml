.header
  %h1.share-the-road
    Articles for
    %span.underline= @feed[:title]
.subheader
  %a.no-style{ href: feeds_path }
    = fa_icon 'chevron-left', text: 'Back to Feeds'
  .actions
    = render partial: 'sort', locals: { feed: @feed, sorted_by: @sort_by }
  .clear

%ul#articles
  = render partial: "article", collection: @feed.articles.order("#{@sort_by.flatten[0]} #{@sort_by.flatten[1].upcase}")
