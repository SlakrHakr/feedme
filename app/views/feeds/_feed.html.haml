%li.resource
  - if feed[:image].present? && feed[:image][:url].present?
    = image_tag(feed[:image][:url], width: '100px')
    %br
  %a{ href: feed_path(feed[:id]) }= feed[:title]
  %br
  = "#{feed[:articles].count} articles"
  %br
  = "#{feed[:articles].select{ |article| article[:image].present? && article[:image][:url].present? }.count} articles that contain an image"
  %br
  = "#{earliest_published_article(feed[:articles])} is the earliest article"
  %br
  = "#{latest_published_article(feed[:articles])} is the latest article"
